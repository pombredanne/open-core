<h3 class="mb+">Archive</h3>

{{#conditional-loading-spinner condition=loading}}
  <div class="grid grid--wide">
    {{#each newsletter in model.newsletters}}
      <div class="grid__item col-1-3 lap--col-1-2 phone--col-1-1 mb-">
        <div class="grid grid--full">
          <div class="grid__item col-1-4">
            {{formatted-date newsletter.created_at "DD.MM.YY"}}
          </div>
          <div class="grid__item col-7-12">
            <a class="newsletter-page-link" href="/nwslttr/{{newsletter.id}}">{{newsletter.title}}</a>
          </div>
          <div class="grid__item col-1-6 text--right">
            <a href="/newsletters/{{newsletter.id}}/download" target="_blank">
              <i class="fa fa-file-pdf-o"></i>
              pdf
            </a>
          </div>
        </div>
      </div>
    {{/each}}
    <div class="grid__item col-1-1">
      <a href {{action "previousPage"}} {{bind-attr class="firstPage:hidden"}}>
        <i class="sci sci__caret--left"></i>
      </a>
      <a href {{action "nextPage"}} {{bind-attr class=":pull--right lastPage:hidden"}}>
        <i class="sci sci__caret--right"></i>
      </a>
    </div>
  </div>
{{/conditional-loading-spinner}}
