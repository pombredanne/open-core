<div {{bind-attr class=":container--full :border-color--white :nav--footer :bo-t--1 border-color--white"}}>
  <section class="container color--white desk--pv bg-color--black-dark tablet--pl phone--pt ">

    <div class="grid grid--middle">

      <div class="grid__item col-5-6 tablet--col-1-1 phone--col-1-1">
        <div class="grid grid--middle grid--full">

          <div class="grid__item col-1-12 tablet--col-1-3 phone--col-1-1 phone--pl ">
            <div class="grid grid--middle">
              <div class="grid__item col-1-1 tablet--col-1-4 phone--col-1-2">
                <i class="sci sci__src-symbol--bracket sci--xl"></i>
              </div>
              <div class="grid__item col-1-1 desk--hide tablet--col-3-4 phone--col-1-2 phone--text--right phone--pr">
                <div class="grid">
                  <div class="grid__item col-1-6 tablet--col-1-1 phone--col-1-1">
                    <div class="grid grid--middle grid--narrow">
                      <div class="grid__item col-1-4 tablet--col-1-4 phone--col-1-3">
                        <a class="mh- color--white a--footer inherit-color-visited" target="_blank" href="https://github.com/srcclr">
                          <i class="fa fa-github-square phone--font--h1 color-hover--primary sci--lg"></i>
                        </a>
                      </div>
                      <div class="grid__item col-1-4 tablet--col-1-4 phone--col-1-3">
                        <a class="mh- color--white a--footer inherit-color-visited" target="_blank" href="https://twitter.com/srcclr">
                          <i class="fa fa-twitter-square phone--font--h1  color-hover--primary sci--lg"></i>
                        </a>
                      </div>
                      <div class="grid__item col-1-4 tablet--col-1-4 phone--col-1-3">
                        <a class="mh- color--white a--footer inherit-color-visited" target="_blank" href="https://www.linkedin.com/company/sourceclear">
                          <i class="fa fa-linkedin-square phone--font--h1  color-hover--primary sci--lg"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="grid__item col-11-12 tablet--col-2-3 phone--col-1-1">
            <div class="top--nav flex flex--align-items--center flex--justify-content--start phone--flex--flex-direction--column tablet--flex--flex-wrap--wrap color--white">
              <div class="navbar__item tablet--bo-bl--1  phone--col-1-1 tablet--col-1-3">
                <a ui-sref="about" class="btn font-family--heading color--white inline-block col-1-1 text--center pv-">About us</a>
              </div>
              <div class="nav--divider phone--hide"></div>
              <div class="navbar__item tablet--bo-rbl--1  phone--col-1-1 phone--bo-t--1 tablet--col-1-3">
                <a ui-sref="contact" class="btn font-family--heading color--white inline-block col-1-1 text--center pv-">Contact</a>
              </div>
              <div class="nav--divider phone--hide"></div>
              <div class="navbar__item tablet--bo-b--1  phone--col-1-1 phone--bo-t--1 tablet--col-1-3">
                <a href="https://blog.srcclr.com/" target="_blank" class="btn font-family--heading color--white inline-block col-1-1 text--center pv-">Blog</a>
              </div>
              <div class="nav--divider phone--hide"></div>
              <div class="navbar__item  phone--col-1-1 phone--bo-t--1 tablet--bo-l--1 tablet--col-1-3">
                <a href="https://open.srcclr.com/" target="_blank" class="btn font-family--heading color--white inline-block col-1-1 text--center pv-">Community</a>
              </div>
              <div class="nav--divider phone--hide"></div>
              <div class="navbar__item tablet--col-1-3 tablet--bo-rl--1  phone--col-1-1 phone--bo-t--1">
                <a ui-sref="legal-terms" class="btn font-family--heading color--white inline-block col-1-1 text--center pv-">Legal</a>
              </div>
              {{#if currentUser}}
                <div class="nav--divider phone--hide"></div>
                <div class="navbar__item tablet--col-1-3  phone--col-1-1 phone--bo-t--1">
                  <a ui-sref="downloads" class="btn font-family--heading color--white inline-block col-1-1 text--center pv-">Downloads</a>
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      <div class="grid__item col-1-6">
        <div class="grid grid--middle grid--narrow grid--right">
          <div class="grid__item col-1-4 tablet--hide phone--hide">
            <a class="mh- color--white a--footer inherit-color-visited" target="_blank" href="https://github.com/srcclr">
              <i class="fa fa-github-square color-hover--primary sci--lg"></i>
            </a>
          </div>
          <div class="grid__item col-1-4 tablet--hide phone--hide">
            <a class="mh- color--white a--footer inherit-color-visited" target="_blank" href="https://twitter.com/srcclr">
              <i class="fa fa-twitter-square color-hover--primary sci--lg"></i>
            </a>
          </div>
          <div class="grid__item col-1-4 tablet--hide phone--hide">
            <a class="mh- color--white a--footer inherit-color-visited" target="_blank" href="https://www.linkedin.com/company/sourceclear">
              <i class="fa fa-linkedin-square color-hover--primary sci--lg"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
