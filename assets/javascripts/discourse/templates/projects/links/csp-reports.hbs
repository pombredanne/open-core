{{#if model.isPluginInstalled}}
  {{#if currentUser}}
    <a class="btn--full btn--primary mb--" href="/{{model.name}}">Use the Tool</a>
  {{else}}
    <button class="btn--full btn--default disabled mb--">Log in to use the tool</button>
  {{/if}}
{{else}}
  <a class="btn--full btn--primary mb--" href="http://github.com/srcclr/csp-reports">Install plugin</a>
{{/if}}
<a class="btn--full btn--primary-clear mb--" href="{{model.htmlUrl}}">GH Repo</a>
<a class="btn--full btn--primary-clear mb--" href="/c/csp-reports">Discuss</a>
