<section class="page-header">
  <div class="container">
    <div class="grid grid--middle mb+">
      <div class="grid__item col-1-3 lap--col-1-2 phone--col-1-1">
        <h2>NWS:LTTR</h2>
      </div>
      <div class="grid__item col-2-3 lap--col-1-2 phone--col-1-1">
        <h3>Curated open source and security articles, latest vulnerabilities, projects and news.</h3>
      </div>
    </div>

    {{#if model.latestNewsletter }}
      <div class="grid grid--middle">
        <div class="grid__item col-1-1">
          <h3 class="text--center">
            <a href="/nwslttr/{{model.latestNewsletter.id}}" class="color--primary">
              read the latest edition
            </a>
          </h3>
        </div>
      </div>
    {{/if}}
  </div>
</section>

<section class="subscribe">
  <div class="background-icon">
    <i class="fa fa-bullhorn"></i>
  </div>

  <div class="container">
    <div class="grid grid--middle grid--wide">
      <div class="grid__item col-3-7 lap--col-1-2 phone--col-1-1">
        <h2 class="mb">Subscribe</h2>
        <p>
          No spam, ever.<br>
          Unsubscribe at any time.
        </p>
      </div>
      <div class="grid__item col-4-7 lap--col-1-2 phone--col-1-1">
        <form class="marketo-form m0" action="https://srcclr.com/" method="GET">
          <div class="grid grid--middle">
            <div class=" grid__item col-10-12 portable--col-1-1">
              <input class="control--text color--white mv" id="Email" maxlength="80" results="0" name="Email" required="" type="email" placeholder="enter your email to subscribe">
            </div>
            <div class="grid__item col-2-12">
              <button type="submit" class="btn btn--sm">
                Submit
                <i class="sci sci__arrow--external-link"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</section>

<section class="curated-content">
  <div class="container">
    <h2 class="mb+">Curated content</h2>
    <div class="grid grid--middle grid--full">
      <div class="grid__item col-3-8 phone--col-1-3">
        <div class="grid grid--full grid--middle">
          <div class="grid__item col-1-2">
            <div class="grid">
              <div class="grid__item col-1-2 text--center">
                <i class="fa fa-mobile content-source-icon"></i>
              </div>
              <div class="grid__item col-1-2 text--center">
                <i class="fa fa-users content-source-icon"></i>
              </div>
              <div class="grid__item col-1-2 text--center pushed">
                <i class="fa fa-newspaper-o content-source-icon"></i>
              </div>
              <div class="grid__item col-1-2 text--center pushed">
                <i class="fa fa-github content-source-icon"></i>
              </div>
              <div class="grid__item col-1-2 text--center">
                <i class="fa fa-twitter content-source-icon"></i>
              </div>
              <div class="grid__item col-1-2 text--center">
                <i class="fa fa-rss content-source-icon"></i>
              </div>
            </div>
          </div>
          <div class="grid__item col-1-2 text--center">
            <i class="fa fa-long-arrow-right content-source-icon"></i>
          </div>
        </div>
      </div>
      <div class="grid__item col-2-8 phone--col-1-3 bo-h--2 text--center engineers">
        <h3>SRC:CLR</h3>
        <h4>engineers</h4>
      </div>
      <div class="grid__item phone--col-1-3 col-3-8">
        <div class="grid grid--middle grid--full">
          <div class="grid__item col-1-2 text--center">
            <i class="fa fa-long-arrow-right content-source-icon"></i>
          </div>
          <div class="grid__item col-1-2 text--right">
            <i class="fa fa-envelope-o fa-5x content-target-icon"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="archive">
  <div class="container">
    {{partial "newsletter-archive"}}
  </div>
</section>
